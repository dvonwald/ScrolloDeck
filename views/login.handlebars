<body>
  <div class="hero is-fullheight is-primary has-background-info">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-8 is-offset-2">
          <h3 class="title has-text-white">Login</h3>
          <hr class="login-hr" />
          <p class="subtitle has-text-white">Continue a campaign or begin a new
            one! Choose from one of our many tabletop RPGs, card games, or board
            games.</p>
          <div class="box">
            <div class="box is-primary">
              <img src="/images/ScrolloDeck.svg" />
            </div>
            <div class="title has-text-black is-5">Please enter your username
              and password.</div>
          </div>
          <form class="login-form">
            <div class="field">
              <div class="control">
                <input
                  class="input is-large"
                  id="username"
                  type="text"
                  placeholder="Username"
                  autofocus=""
                />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input
                  class="input is-large"
                  type="password"
                  placeholder="Password"
                  id="password"
                />
              </div>
            </div>
            <button
              class="button is-block is-danger is-large is-fullwidth has-background-primary"
              type="submit"
            >Login</button>
          </form>
          <label class="checkbox" style="margin: 20px;">
            <input type="checkbox" />
            Remember me
          </label>
          <p class="has-text-white is-size-5" style="line-height: 70px;">
            <a href="./signup.html">Sign Up</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/login.js"></script>
</body>