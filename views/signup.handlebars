<body>
  <div class="hero is-fullheight is-primary has-background-info">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-8 is-offset-2">
          <h3 class="title has-text-white">Create a new account</h3>
          <hr class="login-hr" />
          <p class="subtitle has-text-white">Welcome to ScrolloDeck! Choose from
            one of our many tabletop RPGs, card games, or board games. Adventure
            awaits!</p>
          <div class="box">
            <div class="box">
              <img src="/images/ScrolloDeck.svg" />
            </div>
            <div class="title has-text-black is-5">Please enter your username
              and create a new password.
            </div>
          </div>
          <form class="signup-form" action="/api/users/adduser" method="POST">
            <div class="field">
              <div class="control">
                <input
                  class="input is-large"
                  id="username"
                  name="username"
                  type="text"
                  placeholder="Username"
                  autofocus=""
                />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input
                  class="input is-large"
                  type="password"
                  placeholder="password"
                  id="password"
                  name="password"
                />
              </div>
            </div>
            {{! <label class="checkbox" style="margin: 20px;">
              <input type="checkbox" />
              Remember me
            </label> }}
            <button
              class="button is-block is-danger is-large is-fullwidth has-background-primary"
            >Sign Up</button>
          </form>
          <p class="has-text-white is-size-5" style="line-height: 70px;">
            <a href="/login">Log In</a>
          </p>
        </div>
      </div>
    </div>
  </div>

</body>